{% extends "layout.njk" %}

{% block content %}
    
    <div class="card">
        <section 
            class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover ">
        </section>

        <section class="details">
            <div class="item">
                <div>Nome</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.birth_date }}</div>
            </div>

            <div class="item">
                <div>Escolaridade</div>
                <div>{{ teacher.education_level }}</div>
            </div>
               <div class="item">
                <div>Tipo de Classe</div>
                <div>{{ teacher.class_type }}</div>
            </div>

            <div class="item">
                <div>Mat√©rias</div>
                {% for subjects_taught in teacher.subjects_taught %}
                 <span> {{ subjects_taught }}</span>
                {% endfor %}
                
            </div>

               <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>
    
    <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
        </section>
    </div>

{% endblock content %}