            <input 
                type="url" 
                name="avatar_url"
                placeholder="http://"  
                value="{{ student.avatar_url }}"
            >
        </div>
    </div>

     <div class="item">
        <div>Nome</div>
        <div>
            <input 
                type="text" 
                name="name"
                placeholder="Nome do Professor" 
                value="{{ student.name }}"
            >
        </div>
    </div>
    <div class="item">
    <div>Email</div>
        <div>
            <input 
                type="email"
                name="email"
                value="{{ student.email }}"
            >
        </div>

    <div class="item">
        <div>Data de Nascimento</div>
        <div>
            <input 
                type="date"
                name="birth" 
                value="{{ student.birth }}"
            >
        </div>
    </div>
