{% extends "layout.njk" %}

{% import "parts/card.njk" as cards %}

{% block content %}

    {% call cards.render('Meus An√∫ncios', 'users-ads container') %}
    <div class="items">
        {% for product in products %}
            <div class="item">
                <div class="image" style="background-image: url({{product.img}})"></div>

                <div class="info">
                    <div class="title">{{product.title}}</div>
                    <div class="price">{{product.formatPrice}}</div>
                    <div class="published">Publicado em{{product.formatCreatedAt}}</div>
                <div class="actions">
                    <a href="/products/{{product.id}}/edit">Editar</a>
                    <a href="/products/{{product.id}}">Ver</a>
                </div>
                
                </div>

            </div>
        {% endfor %}
    </div>
    {% endcall %}

{% endblock %}